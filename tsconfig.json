{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "src/assets/assets.d.ts" // Ensure this matches your project structure
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}
